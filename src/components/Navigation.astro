---
import Pagefind from "./Pagefind.astro";
---

<div id="nav-links" class="nav-links collapsed font-overpass-mono capitalize">
  <a class="fade-effect" href="/">Home</a>
  <a class="fade-effect" href="/authors/">Biografias</a>
  <div class="dropdown">
    <a
      class="fade-effect dropdown-toggle"
      href="#"
      onclick="toggleDropdown(event, 'albuns-menu')">Albuns</a
    >
    <div id="albuns-menu" class="dropdown-menu">
      <a class="fade-effect" href="/kanayko/">Edgar Kanayk√µ</a>
      <a class="fade-effect" href="/ester/">Ester Menezes Xucuru</a>
      <a class="fade-effect" href="/priscila/">Priscila Tapajowara</a>
    </div>
  </div>
  <a class="fade-effect" href="/zeitweilig/catalogo/">Projeto HH955</a>
  <Pagefind class="fade-effect" />
  <slot />
</div>

<style>
  /* nav styles */
  .nav-links {
    position: absolute;
    width: 300px;
    height: auto;
    right: -100%;
    padding: 10px;
    transition: opacity 0.2s ease-in-out;
    opacity: 0;
    z-index: 10;
    pointer-events: none;
  }

  /* Dropdown base styles */
  .dropdown {
    position: relative;
  }

  /* Hide the dropdown menu by default */
  .dropdown-menu {
    display: none;
    position: relative;
    margin-left: 20px; /* Indent the sub-menu */
  }

  /* Show dropdown menu on hover (desktop) */
  .dropdown:hover .dropdown-menu {
    display: block;
  }

  /* Show dropdown menu when open class is applied (mobile) */
  .dropdown-menu.open {
    display: block;
  }

  .nav-links.collapsed {
    right: 0;
    opacity: 0;
    top: 25px;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  }

  .nav-links.open {
    border-radius: 10px;
    right: 0;
    top: 25px;
    opacity: 1;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    pointer-events: auto;
  }

  .nav-links a {
    display: block;
    line-height: 50px;
    padding-left: 30px;
    box-sizing: border-box;
    font-size: 18px;
    text-decoration: none;
    height: auto;
  }

  html.dark .nav-links {
    background: rgb(34, 33, 37);
  }

  html:not(.dark) .nav-links {
    background: rgb(245, 245, 245);
  }

  .fade-effect {
    transition: opacity 0.5s ease-in-out;
    opacity: 1;
  }

  .fade-effect:hover {
    opacity: 0.5;
  }

  .nav-search {
    display: flex;
    align-items: center;
    padding: 10px;
    width: 100%; /* make the search box take up the whole width */
  }

  /* Mobile-friendly styling */
  @media (max-width: 768px) {
    .dropdown-menu {
      margin-left: 0; /* Align the submenu with the parent on mobile */
      padding: 10px 0;
    }

    .dropdown-menu a {
      padding-left: 10px;
      font-size: 14px; /* Reduce font size for dropdown links on mobile */
    }

    .dropdown-toggle {
      font-size: 16px; /* Reduce font size for "Albuns" on mobile */
    }

    .nav-links a {
      font-size: 16px; /* Reduce font size for all links on mobile */
    }
  }
</style>

<script>
  declare global {
    interface Window {
      toggleDropdown: (event: MouseEvent, menuId: string) => void;
    }
  }

  window.toggleDropdown = function (event: MouseEvent, menuId: string): void {
    event.preventDefault(); // Prevent link default behavior
    const dropdownMenu = document.getElementById(menuId);
    if (!dropdownMenu) {
      console.error(`Dropdown menu with ID '${menuId}' not found.`);
      return; // Exit if the element is not found
    }
    dropdownMenu.classList.toggle("open"); // Toggle the 'open' class
  };
</script>
