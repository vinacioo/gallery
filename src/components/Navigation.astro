---
import Pagefind from "./Pagefind.astro";
---

<div id="nav-links" class="nav-links collapsed font-overpass-mono capitalize">
  <a class="fade-effect" href="/">Home</a>
  <a class="fade-effect" href="/authors/">Biografias</a>
  <div class="dropdown">
    <a
      class="fade-effect dropdown-toggle"
      href="#"
      onclick="toggleDropdown(event, 'albuns-menu')"
    >
      Albuns
    </a>
    <div id="albuns-menu" class="dropdown-menu">
      <a class="fade-effect sub-link" href="/kanayko/">Edgar Kanayk√µ</a>
      <a class="fade-effect sub-link" href="/ester/">Ester Menezes Xucuru</a>
      <a class="fade-effect sub-link" href="/priscila/">Priscila Tapajowara</a>
    </div>
  </div>
  <a class="fade-effect" href="/zeitweilig/catalogo/">Projeto HH955</a>
  <slot />
</div>

<style>
  /* nav styles */
  .nav-links {
    position: absolute;
    width: 300px;
    height: auto;
    right: -100%;
    padding: 10px;
    transition: opacity 0.2s ease-in-out;
    opacity: 0;
    z-index: 10;
    pointer-events: none;
  }

  .nav-links.collapsed {
    right: 0;
    opacity: 0;
    top: 25px;
    border-radius: 10px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
  }

  .nav-links.open {
    border-radius: 10px;
    right: 0;
    top: 25px;
    opacity: 1;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    pointer-events: auto;
  }

  .nav-links a {
    display: block;
    line-height: 50px;
    padding-left: 30px; /* Consistent left padding */
    box-sizing: border-box;
    font-size: 18px;
    text-decoration: none;
    height: auto;
  }

  /* Dropdown styles */
  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    display: none;
    margin-left: 30px; /* Indent dropdown content */
  }

  .dropdown:hover .dropdown-menu,
  .dropdown-menu.open {
    display: block;
  }

  .dropdown-menu .sub-link {
    padding-left: 25px; /* Extra indentation for sub-links */
    font-size: 15px; /* Smaller font size for sub-links */
    line-height: 35px; /* Adjust spacing for sub-links */
  }

  html.dark .nav-links {
    background: rgb(34, 33, 37);
  }

  html:not(.dark) .nav-links {
    background: rgb(245, 245, 245);
  }

  .fade-effect {
    transition: opacity 0.5s ease-in-out;
    opacity: 1;
  }

  .fade-effect:hover {
    opacity: 0.5;
  }

  /* Mobile-specific styles */
  @media (max-width: 768px) {
    .dropdown-menu {
      margin-left: 15px; /* Reduce margin for mobile */
      padding: 10px 0;
    }

    .dropdown-menu .sub-link {
      padding-left: 20px; /* Adjust indentation for mobile */
      font-size: 14px; /* Slightly smaller font */
    }

    .dropdown-toggle {
      font-size: 17px;
    }

    .nav-links a {
      font-size: 17px;
    }
  }
</style>

<script>
  // TypeScript declaration for `window.toggleDropdown`
  declare global {
    interface Window {
      toggleDropdown: (event: MouseEvent, menuId: string) => void;
    }
  }

  // Define the `toggleDropdown` function
  window.toggleDropdown = function (event: MouseEvent, menuId: string): void {
    event.preventDefault(); // Prevent default behavior
    const dropdownMenu = document.getElementById(menuId);
    if (!dropdownMenu) {
      console.error(`Dropdown menu with ID '${menuId}' not found.`);
      return;
    }
    dropdownMenu.classList.toggle("open");

    // Close other dropdowns
    document.querySelectorAll(".dropdown-menu").forEach((menu) => {
      if (menu.id !== menuId && menu.classList.contains("open")) {
        menu.classList.remove("open");
      }
    });
  };
</script>
